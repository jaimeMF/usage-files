INSTALLED_PACKAGES = !pip list | sed "s/ \((.*)\)//g";
INSTALL = install [--upgrade] ...;
LIST = list [--outdated | --uptodate | --editable | --local] ...; 
SHOW = show <INSTALLED_PACKAGES>;
PIP_COMMANDS = <INSTALL> | <LIST> | <SHOW>  --version;
pip <PIP_COMMANDS>;
pip-2.7 <PIP_COMMANDS>;
pip-3.3 <PIP_COMMANDS>;
pip2 <PIP_COMMANDS>;
pip3 <PIP_COMMANDS>;
