INSTALLED_PACKAGES = !@pip@ list | cut -d ' ' -f 1;
@pip@ install [-U | --upgrade | --force-reinstall | (-r | --requirement) <file> ] ...;
@pip@ uninstall [--yes] <INSTALLED_PACKAGES> ...;
@pip@ list [--outdated | --uptodate | --editable | --local] ...;
@pip@ show <INSTALLED_PACKAGES> ...;
@pip@ freeze;
@pip@ --version;
